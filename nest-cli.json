{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../config/config.yaml",
        "outDir": "./dist/config"
      },
      {
        "include": "../pool_config/pool.yaml",
        "outDir": "./dist/pool_config"
      },
      {
        "include": "../src/model/**/*.yaml",
        "outDir": "./dist/src"
      },
      {
        "include": "../src/model/**/*.abi.json",
        "outDir": "./dist/src"
      },
      {
        "include": "../docs/swagger.md",
        "outDir": "./dist/docs"
      },
      {
        "include": "./graphql/**/*.graphql",
        "outDir": "./dist/src"
      }
    ]
  }
}